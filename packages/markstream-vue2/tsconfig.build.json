{
  "compilerOptions": {
    "target": "ES2017",
    "jsx": "preserve",
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["vite/client"],
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist/types",
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.vue", "src/shims-vue.d.ts", "src/types/**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
